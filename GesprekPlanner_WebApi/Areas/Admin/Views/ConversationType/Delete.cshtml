@model GesprekPlanner_WebApi.Models.ConversationType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Verwijderen</h2>

<h3>Weet je zeker dat je dit gespreks type wilt verwijderen?</h3>
<p>Alle gesprekken met dit type worden verwijdert.</p>
<div>
    <h4>Gesprekstype</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ConversationName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConversationName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ConversationDuration)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConversationDuration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Verwijder" class="btn btn-default" /> |
            <a asp-action="Index">Terug naar de lijst</a>
        </div>
    </form>
</div>

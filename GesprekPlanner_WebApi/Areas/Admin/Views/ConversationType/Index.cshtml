@model IEnumerable<GesprekPlanner_WebApi.Models.ConversationType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Maak een nieuw gesprekstype aan</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ConversationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConversationDuration)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConversationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConversationDuration)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Verander</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
